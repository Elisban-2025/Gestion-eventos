<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.union.asistencia.controller.ReporteController">

    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- Filtros -->
                <VBox spacing="10.0" style="-fx-padding: 20; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <children>
                        <Label text="Generador de Reportes" style="-fx-font-size: 18; -fx-font-weight: bold;" />

                        <GridPane hgap="15.0" vgap="15.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="200.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="200.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="200.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Tipo de Reporte:" />
                                <ComboBox fx:id="cbxTipoReporte" promptText="Seleccionar tipo" GridPane.columnIndex="1" />
                                <Button fx:id="btnGenerar" mnemonicParsing="false" onAction="#generarReporte" styleClass="btn-info, shadow-effect" text="ðŸ“ˆ Generar Reporte" GridPane.columnIndex="2" />

                                <Label text="Mes:" GridPane.rowIndex="1" />
                                <ComboBox fx:id="cbxMes" promptText="Seleccionar mes" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Button fx:id="btnExportar" mnemonicParsing="false" onAction="#exportarReporte" styleClass="btn-success, shadow-effect" text="ðŸ“Š Exportar Reporte" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                                <!-- CORREGIDO: EliminÃ© el GridPane.columnIndex duplicado -->
                                <Label text="AÃ±o:" GridPane.rowIndex="1" />
                                <ComboBox fx:id="cbxAnio" promptText="Seleccionar aÃ±o" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            </children>
                        </GridPane>

                        <!-- Rango de fechas -->
                        <HBox spacing="15.0" style="-fx-padding: 10 0 0 0;">
                            <children>
                                <VBox HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Fecha Inicio:" />
                                        <DatePicker fx:id="dpFechaInicio" />
                                    </children>
                                </VBox>
                                <VBox HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Fecha Fin:" />
                                        <DatePicker fx:id="dpFechaFin" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Resultados -->
                <VBox spacing="10.0" style="-fx-padding: 0 20 20 20;" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Resultados del Reporte" style="-fx-font-size: 16; -fx-font-weight: bold;" />
                        <TableView fx:id="tableView" VBox.vgrow="ALWAYS" styleClass="shadow-effect">
                            <!-- Las columnas se generan dinÃ¡micamente -->
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>